<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Customer.Details">

    <include layout="@layout/custom_tool_bar"
        android:id="@+id/customerToolBar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageOfAvailable"
        android:src="@drawable/renticon"
        app:layout_constraintTop_toBottomOf="@id/customerToolBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageOfAvailable"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:text="Accomodation Type:"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/typeValue"
                android:text="Room"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                app:layout_constraintLeft_toRightOf="@+id/type"
                app:layout_constraintTop_toTopOf="parent"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roomNumInDetail"
                android:text="Room Number:"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/type"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roomNumbersValueInDetail"
                android:text="1"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                app:layout_constraintLeft_toRightOf="@+id/roomNumInDetail"
                app:layout_constraintTop_toBottomOf="@+id/type"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hostelNameInDetails"
                android:text="Hostel Name:"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roomNumInDetail"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hostelnameValueInDetails"
                android:text="vission blook"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintLeft_toRightOf="@+id/hostelNameInDetails"
                app:layout_constraintTop_toBottomOf="@+id/roomNumInDetail"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roomRent"
                android:text="Room Rent:"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hostelNameInDetails"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roomRentValue"
                android:text="3000"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintLeft_toRightOf="@+id/roomRent"
                app:layout_constraintTop_toBottomOf="@+id/hostelNameInDetails"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalSeats"
                android:text="Total Seats:"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roomRent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalSeateValue"
                android:text="4"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintLeft_toRightOf="@+id/totalSeats"
                app:layout_constraintTop_toBottomOf="@+id/roomRent"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/availableSeats"
                android:text="Available Seats"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/totalSeats"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/availableSeatsValue"
                android:text="1"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintLeft_toRightOf="@+id/availableSeats"
                app:layout_constraintTop_toBottomOf="@+id/totalSeats"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roomCategory"
                android:text="Room Category:"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/availableSeats"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roomCategoryValue"
                android:text="For Males"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                app:layout_constraintLeft_toRightOf="@+id/roomCategory"
                app:layout_constraintTop_toBottomOf="@+id/availableSeats"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roomOwner"
                android:text="Room Owner Name:"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roomCategory"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roomOwnName"
                android:text="Malak Naz Khan"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                app:layout_constraintLeft_toRightOf="@+id/roomOwner"
                app:layout_constraintTop_toBottomOf="@+id/roomCategory"
                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/whatsappOwner"
                android:text="Check Details"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8"
                android:textAllCaps="false"
                android:layout_marginRight="@dimen/margin_32"
                android:background="@drawable/btn_check_details_bg"
                android:layout_marginTop="@dimen/margin_32"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/roomOwnName"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/callOwner"
                android:text="Call Owner"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8"
                android:textAllCaps="false"
                android:background="@drawable/btn_check_details_bg"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_32"
                app:layout_constraintLeft_toRightOf="@id/whatsappOwner"
                app:layout_constraintTop_toBottomOf="@id/roomOwnName"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>