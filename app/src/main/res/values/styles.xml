<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/text_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/text_color</item>
        <item name="android:dropDownListViewStyle">@style/spinnerTheme</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColorHint">#C0C0C0</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="spinnerTheme" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/spinner_text_color</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColor">@color/spinner_text_color</item>


    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/text_color</item>
    </style>

</resources>
